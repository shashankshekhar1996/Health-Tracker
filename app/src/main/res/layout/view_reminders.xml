<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_reminders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="2dp"
        app:cardElevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:minHeight="135dp"
            android:minWidth="175dp">

            <TextView
                android:id="@+id/tv_reminder_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Title"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/btn_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignRight="@+id/tv_reminder_title"
                android:src="@drawable/ic_delete"
                android:tint="@color/colorPrimary"/>

            <TextView
                android:id="@+id/tv_reminder_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_reminder_title"
                android:layout_marginTop="5dp"
                android:text="Description"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tv_reminder_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:alpha="0.7"
                android:gravity="end"
                android:text="Date"
                android:textSize="13sp"
                android:textStyle="bold"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>